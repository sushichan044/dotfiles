{{- $ostype := .chezmoi.os -}}
{{- if eq .chezmoi.os "linux" -}}
{{-   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
{{-     $ostype = "wsl" -}}
{{-   end -}}
{{- end -}}
{{- $for_personal := true -}}
{{- $for_personal = promptBoolOnce . "for_personal" "Is this computer for personal use" -}}
# .for_personal: true | false (default: true)
# .ostype: darwin | linux | wsl | windows
[data]
for_personal = {{ $for_personal }}
ostype = {{ $ostype | quote }}
private_available = {{ if stat (joinPath .chezmoi.workingTree "private", ".gitkeep") }}true{{ else }}false{{ end }}

[diff]
command = "delta"
pager = "delta"
exclude = ["scripts", "externals"]

[edit]
command = "code"
args = [ "-n" ]

[hooks.read-source-state.pre]
script = "{{ .chezmoi.sourceDir }}/.chezmoihooks/read-source-state/pre.sh"
