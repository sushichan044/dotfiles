# Behavior
window-inherit-working-directory = true
window-step-resize = true
window-vsync = true
confirm-close-surface = false

# Appearance
theme = Catppuccin Macchiato
background-opacity = 0.75
background-blur-radius = 20
mouse-hide-while-typing = true
resize-overlay = never
macos-icon = xray

# Cursor
cursor-style = bar

# Character
font-family = MesloLGS NF
font-feature = -dlig

# Keybindings
macos-option-as-alt = left
keybind = shift+enter=text:\n

## setting `alt+¥` does not work as expected
## https://qiita.com/tadsan/items/399b99ea5261273792f9
keybind = ¥=text:\\

## from v1.2, ghostty refers W3C KeyboardEvent Code, so some keybinds are changed on JIS keyboard layout
## Spec: https://www.w3.org/TR/uievents-code/
## debug: https://keyjs.dev/
keybind = super+shift+bracket_left=unbind
keybind = super+shift+bracket_right=previous_tab
keybind = super+shift+backslash=next_tab
keybind = super+bracket_left=unbind
keybind = super+bracket_right=goto_split:previous
keybind = super+backslash=goto_split:next
