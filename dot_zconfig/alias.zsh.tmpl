IsExistCmd() { type "$1" >/dev/null 2>&1; }

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias clr='clear'
alias mkdir='mkdir -p'
alias rm='rm -i'
alias mv='mv -i'

alias sz="source $HOME/.zshrc"
alias cz="code $HOME/.zshrc"
alias ca="code $HOME/.zconfig/alias.zsh"

# homebrew
alias br='brew'
alias bru='brew update && brew upgrade'
alias bri='brew install'
alias brr='brew remove'

# git
alias g='git'
alias gs='git status'
alias gp='git push'
alias gpf='git push --force-with-lease'
alias gpl='git pull --rebase'
alias grm='git rm'
alias grt='cd "$(git rev-parse --show-toplevel)"'
alias lg='lazygit'

# docker
alias d='docker'
alias dc='docker compose'
alias dcb='docker compose build'
alias dcu='docker compose up -d'
alias dcd='docker compose down'

# latex
alias tl='sudo tlmgr'
alias tlu='sudo tlmgr update --self && sudo tlmgr update --all'

if IsExistCmd eza; then
    alias ls='eza'
    alias ll='eza -abghHliS --time-style=iso --group-directories-first'
else
    alias ls='ls --color=auto'
    alias ll='ls -alh'
fi

if IsExistCmd fd; then
    alias find='fd'
fi

{{ if eq .chezmoi.os "linux" }}
# apt
alias agi='sudo apt install'
alias agu='sudo apt update && sudo apt upgrade'
alias agc='sudo apt autoremove -y && sudo apt autoclean -y'
alias agr='sudo apt remove'
{{ end }}
{{ if eq .ostype "wsl" }}
# wsl-open
alias open='wsl-open'
{{ end }}
