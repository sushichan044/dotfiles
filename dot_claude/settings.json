{
  "env": {
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "List(*)",
      "WebFetch(https://*)",
      "Edit(*)",

      "Bash(git:*)",

      "Bash(npm:*)",
      "Bash(pnpm:*)",
      "Bash(na:*)",
      "Bash(ni:*)",

      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(tail:*)",
      "Bash(head:*)"
    ],
    "deny": ["Bash(curl:*)", "Bash(http:*)", "Bash(rm:*)"]
  }
}
