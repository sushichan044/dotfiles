{
  "agents": [
    "claude-code",
    "claude-desktop",
    "codex-cli",
    "cursor",
    "gemini-cli",
    "github-copilot-cli"
  ],
  "mcpServers": {
    "bundlephobia": {
      "url": "https://bundlephobia-mcp.sushichan044.workers.dev/mcp"
    },
    "chrome-devtools": {
      "args": ["-y", "chrome-devtools-mcp@latest", "--categoryEmulation=false"],
      "command": "npx"
    },
    "cloudflare-docs": {
      "url": "https://docs.mcp.cloudflare.com/mcp"
    },
    "context7": {
      "url": "https://mcp.context7.com/mcp"
    },
    "deepwiki": {
      "url": "https://mcp.deepwiki.com/mcp"
    },
    "grep": {
      "url": "https://mcp.grep.app"
    },
    "mcpdoc": {
      "command": "uvx",
      "args": [
        "--from",
        "mcpdoc",
        "mcpdoc",
        "--json",
        "${HOME}/ai/config/mcpdoc.json",
        "--transport",
        "stdio"
      ]
    },
    "notion": {
      "url": "https://mcp.notion.com/mcp"
    },
    "readability": {
      "args": [
        "run",
        "--allow-env",
        "--allow-net",
        "--allow-read",
        "--allow-run",
        "npm:@mizchi/readability@0.6.8",
        "--mcp"
      ],
      "command": "deno"
    },
    "sentry": {
      "url": "https://mcp.sentry.dev/mcp"
    },
    "sequential-thinking": {
      "args": [
        "run",
        "--allow-env",
        "npm:@modelcontextprotocol/server-sequential-thinking@latest"
      ],
      "command": "deno"
    }
  }
}
